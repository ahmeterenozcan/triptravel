@model triptravel.Models.Siniflar.BlogYorum
@{
    ViewBag.Title = "BlogDetay";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<!DOCTYPE HTML>
<html>
<head>
    <title>Personal Blog | Blog Detay</title>
    <link href="~/web2/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/web2/css/style.css" rel='stylesheet' type='text/css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <!----webfonts---->
    <link href='http://fonts.googleapis.com/css?family=Oswald:100,400,300,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,300italic' rel='stylesheet' type='text/css'>
    <!----//webfonts---->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
</head>
<body>
    <!---header---->
    <div class="header">
    </div>
    <!--/header-->
    <div class="single">
        <div class="container">
            <div class="row">
                <!-- Ana içerik kısmı -->
                <div class="col-md-8 single-main"  style="font-family: 'Georgia', serif;">
                    <div class="single-grid">
                        @foreach (var x in Model.Deger1)
                        {
                            <img src="@x.BlogImage" alt="" style="margin-bottom:20px" />
                            <h4 style="font-family: 'Georgia', serif;">@x.Baslik</h4>
                            <p style="font-family: 'Georgia', serif; white-space: pre-line;">@Html.Raw(HttpUtility.HtmlDecode(x.Aciklama))</p>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(Model.VideoUrl))
                    {
                        <div style="margin: 20px 0; text-align: center;">
                            <iframe width="560" height="315" src="@Model.VideoUrl"
                                    title="YouTube video player" frameborder="0"
                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                    allowfullscreen></iframe>
                        </div>
                    }

                    @foreach (var y in Model.Deger2)
                    {
                        <ul class="comment-list">
                            <li>
                                <img src="~/web2/images/avatar.png" class="img-responsive" alt="">
                                <div class="desc">
                                    <p>@y.KullaniciAdi : @y.Yorum</p>
                                </div>
                                <div class="clearfix"></div>
                            </li>
                        </ul>
                    }

                    @Html.Action("YorumYap", "Blog")
                </div>

                <!-- Sağ taraftaki son gönderiler -->
                <div class="col-md-4 side-content">
                    <div class="recent">
                        <h3>SON GÖNDERİLER</h3>
                        @foreach (var y in Model.Deger4)
                        {
                            <ul style="list-style-type: none; padding: 0;">
                                <li style="margin-bottom: 15px; display: flex; align-items: center;">
                                    <img src="@y.BlogImage" alt="@y.Baslik" style="width: 50px; height: 50px; object-fit: cover; margin-right: 10px; border-radius: 5px;" />
                                    <a href="/Blog/BlogDetay/@y.ID" style="text-decoration: none; color: #333; font-weight: bold;">@y.Baslik</a>
                                </li>
                            </ul>

                        }
                    </div>
                    <div class="share-links" style="margin-top: 20px; border-top: 3px solid #ff6f61; padding-top: 15px; margin-bottom: 20px;">
                        <h4 style="margin-bottom: 15px; font-size: 20px; font-family: Arial, sans-serif; color: #333; text-align: center;">
                            <span style="color: #ff6f61;">Bu Bloğu Paylaş</span>
                        </h4>
                        <div style="display: flex; justify-content: center; gap: 20px;">
                            <a href="https://twitter.com/intent/tweet?text=Check out this blog!&url=@Request.Url" target="_blank" style="text-decoration: none; transition: transform 0.3s;">
                                <img src="/web2/images/twitter-icon.png" alt="Twitter'da Paylaş" style="width: 50px; height: 50px; border-radius: 50%; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
                            </a>
                            <a href="https://www.facebook.com/sharer/sharer.php?u=@Request.Url" target="_blank" style="text-decoration: none; transition: transform 0.3s;">
                                <img src="/web2/images/facebook-icon.png" alt="Facebook'ta Paylaş" style="width: 50px; height: 50px; border-radius: 50%; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>
</html>
